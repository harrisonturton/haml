{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "haml",
	"patterns": [
		{
			"include": "#statements"
		}
	],
	"repository": {
		"statements": {
			"patterns": [
				{ "include": "#spec" },
				{ "include": "#declaration" },
				{ "include": "#comment" }
			]
		},
		"spec": {
			"match": "\\b(spec)\\b\\s+(\"[^\"]*\")",
			"captures": {
				"1": { "name": "keyword" },
				"2": { "name": "string.quoted.double" }
			}
		},
		"declaration": {
			"patterns": [
				{
					"name": "enum.haml",
					"begin": "\\b(enum)\\b\\s+([A-z0-9_]*)\\s*\\{",
					"beginCaptures": {
						"1": {
							"name": "keyword"
						},
						"2": {
							"name": "entity.name.class"
						}
					},
					"end": "\\}",
					"patterns": [
						{
							"name": "enum.name.haml",
							"match": "([a-z_]*)\n",
							"captures": {
								"1": {
									"name": "entity.name.function"
								}
							}
						}
					]
				},
				{
					"name": "declaration.haml",
					"begin": "([a-z]+)\\s+((\"[a-z]+\")|([a-zA-Z0-9_]*))\\s*{",
					"end": "\\}",
					"beginCaptures": {
						"1": {
							"name": "keyword"
						},
						"3": {
							"name": "string.quoted.double"
						},
						"4": {
							"name": "entity.name.class"
						}
					},
					"patterns": [
						{ "include": "#property-declaration" },
						{ "include": "#function-declaration" }
					]	
				}
			]
		},
		"property-declaration": {
			"patterns": [
				{ "include": "#comment" },
				{
					"name": "property.haml",
					"begin": "(?:([a-z0-9_]+)|(\"[^\"]*\"))(\\?)?:",
					"end": "\n",
					"beginCaptures": {
						"1": { "name": "entity.name.tag" },
						"2": { "name": "string.quoted.double" },
						"3": { "name": "keyword" }
					},
					"patterns": [
						{ "include": "#expression" }
					]
				}
			]
		},
		"form-property-declaration": {
			"patterns": [
				{ "include": "#comment" },
				{
					"name": "property.haml",
					"begin": "(?:([a-z0-9_]+)|(\"[^\"]*\"))(\\?)?:",
					"end": "\n",
					"beginCaptures": {
						"1": { "name": "entity.name.function" },
						"2": { "name": "string.quoted.double" },
						"3": { "name": "keyword" }
					},
					"patterns": [
						{ "include": "#expression" }
					]
				}
			]
		},
		"function-declaration": {
			"begin": "([A-z]+)\\((\"[^\"]*\")?\\)\\s+\\{",
			"end": "\\}",
			"beginCaptures": {
				"1": { "name": "entity.name.function" },
				"2": { "name": "string.quoted.double" }
			},
			"patterns": [
				{ "include": "#form-property-declaration" }
			]
		},
		"expression": {
			"patterns": [
				{
					"name": "expression.object.haml",
					"begin": "(repeatable)?\\s*\\{",
					"end": "\\}",
					"beginCaptures": {
						"1": { "name": "keyword" }
					},
					"patterns": [
						{ "include": "#form-property-declaration" }
					]
				},
				{
					"name": "entity.name.type",
					"match": "\\b(string|number|boolean|object|struct)\\b"
				},
				{
					"name": "string.quoted.double",
					"match": "(\"[^\"]*\")"
				},
				{ "include": "#identifier" }
			]
		},
		"comment": {
			"patterns": [
				{
					"name": "comment",
					"begin": "//",
					"end": "\\n"
				},
				{
					"name": "comment",
					"begin": "#",
					"end": "\\n"
				},
				{
					"name": "comment.block.documentation",
					"begin": "/\\*\\*",
					"end": "\\*/",
					"patterns": [
						{
							"name": "keyword",
							"match": "@[a-zA-Z0-9_]*"
						}
					]
				},
				{
					"name": "comment.block",
					"begin": "/\\*",
					"end": "\\*/"
				}
			]
		},
		"identifier": {
			"patterns": [
				{
					"name": "entity.name.class",
					"match": "[A-Z]+[a-zA-Z0-9_]*"
				}
			]
		}
	},
	"scopeName": "source.haml"
}