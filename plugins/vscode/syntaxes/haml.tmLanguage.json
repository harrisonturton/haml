{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "haml",
	"patterns": [
		{
			"include": "#statements"
		}
	],
	"repository": {
		"statements": {
			"patterns": [
				{ "include": "#declaration" },
				{ "include": "#comment" }
			]
		},
		"declaration": {
			"patterns": [
				{
					"name": "declaration.haml",
					"begin": "([a-z]+)\\s+((\"[a-z]+\")|([A-z]*))\\s*{",
					"end": "\\}",
					"beginCaptures": {
						"1": {
							"name": "keyword"
						},
						"3": {
							"name": "string.quoted.double"
						},
						"4": {
							"name": "entity.name.class"
						}
					},
					"patterns": [
						{ "include": "#property-declaration" }
					]	
				}
			]
		},
		"property-declaration": {
			"patterns": [
				{ "include": "#comment" },
				{
					"name": "property.haml",
					"begin": "([a-z0-9_]+)(\\?)?:",
					"end": "\n",
					"beginCaptures": {
						"1": { "name": "entity.name.tag" },
						"2": { "name": "keyword" }
					},
					"patterns": [
						{ "include": "#expression" }
					]
				}
			]
		},
		"user-property-declaration": {
			"patterns": [
				{ "include": "#comment" },
				{
					"name": "property.haml",
					"begin": "([a-z0-9_]+)(\\?)?:",
					"end": "\n",
					"beginCaptures": {
						"1": { "name": "entity.name.function" },
						"2": { "name": "keyword" }
					},
					"patterns": [
						{ "include": "#expression" }
					]
				}
			]
		},
		"expression": {
			"patterns": [
				{
					"name": "expression.object.haml",
					"begin": "(repeatable)?\\s*\\{",
					"end": "\\}",
					"beginCaptures": {
						"1": { "name": "keyword" }
					},
					"patterns": [
						{ "include": "#user-property-declaration" }
					]
				},
				{
					"name": "entity.name.type",
					"match": "\\b(string|number|boolean|object|struct)\\b"
				},
				{ "include": "#identifier" }
			]
		},
		"comment": {
			"patterns": [
				{
					"name": "comment",
					"begin": "//",
					"end": "\\n"
				},
				{
					"name": "comment.block.documentation",
					"begin": "/\\*\\*",
					"end": "\\*/"
				},
				{
					"name": "comment.block",
					"begin": "/\\*",
					"end": "\\*/"
				}
			]
		},
		"identifier": {
			"patterns": [
				{
					"name": "entity.name.class",
					"match": "[A-Z]+[a-zA-Z0-9_]*"
				}
			]
		}
	},
	"scopeName": "source.haml"
}