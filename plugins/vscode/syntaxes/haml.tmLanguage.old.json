{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "haml",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#declarations"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword",
					"match": "\\b(repeatable|version|set|repeated|only|field|type|enum|spec|import|map)\\b"
				},
				{
					"name": "string.quoted.double",
					"begin": "\"",
					"end": "\""
				}
			]
		},
		"declarations": {
			"patterns": [
				{
					"include": "#decl-rule"
				},
				{
					"include": "#decl-method"
				}
			]
		},
		"decl-rule": {
			"patterns": [
				{
					"name": "rule.expr.haml",
					"begin": "\\b(rule)\\b\\s+(\"[a-z]+\")",
					"end": "\\}",
					"beginCaptures": {
						"1": {
							"name": "keyword"
						},
						"2": {
							"name": "string.quoted.double"
						}
					},
					"patterns": [
						{
							"name": "property.declaration.haml",
							"begin": "([a-z]+)\\??:",
							"end": "(,|\\})",
							"beginCaptures": {
								"1": {
									"name": "entity.name.tag"
								},
								"2": {
									"name": "entity.name.type"
								}
							},
							"patterns": [
								{
									"include": "#value"
								}
							]
						}
					]
				}
			]
		},
		"value": {
			"patterns": [
				{
					"name": "value.haml",
					"begin": "(\\brepeatable\\b)?\\s*\\{",
					"end": "\\}",
					"beginCaptures": {
						"1": {
							"name": "keyword"
						}
					},
					"patterns": [
						{
							"name": "string.quoted.double",
							"match": ".*"
						}
					]
				}
			]
		},
		"decl-method": {
			"patterns": [
				{
					"name": "method.expr.haml",
					"begin": "\\b(method)\\b\\s+([a-zA-Z]+)",
					"end": "\\}",
					"beginCaptures": {
						"1": {
							"name": "keyword"
						},
						"2": {
							"name": "entity.name.class"
						}
					}
				}
			]
		}
	},
	"scopeName": "source.haml"
}